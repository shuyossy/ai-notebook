{
  "version": "0.2.0",
  "configurations": [
    {
      // Electron を直接起動して Main（Node）にデバッグ接続するパターン
      "name": "Launch Electron (Main + Renderer enabled)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      // プロジェクト依存の electron を使う (Windows は .cmd を指定)
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      // アプリ起動時の引数（プロジェクトルートの . を渡す例）
      "args": [
        "."
      ],
      // Node inspector と Chromium remote debugging を有効にする
      "runtimeArgs": [
        "--inspect=9229",                // main の Node inspector ポート
        "--remote-debugging-port=9222"   // renderer (Chromium) のデバッグポート
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "outputCapture": "std",
      // デバッグ前に npm start を走らせる（例：webpack dev server を立てる）
      "preLaunchTask": "npm: start",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    },

    {
      // すでに起動している Electron の main にアタッチするパターン（プロセス選択）
      "name": "Attach to Electron Main (Pick process)",
      "type": "pwa-node",
      "request": "attach",
      "processId": "${command:PickProcess}",
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "port": 9229
    },

    {
      // renderer (webpack dev server の URL) に Chrome デバッガでアタッチする設定
      "name": "Attach to Renderer (Chrome) localhost:3000",
      "type": "pwa-chrome",
      "request": "attach",
      "url": "http://localhost:3000",   // webpack-dev-server の URL に合わせて変更
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true
    },

    {
      // ローカル Chrome を起動して renderer を表示させる（必要であれば）
      "name": "Launch Renderer in Chrome",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ]
    }
  ]
}
